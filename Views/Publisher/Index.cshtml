@model IEnumerable<DemoShop.Models.db.Publisher>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-dark" asp-action="Create">+ Create New</a>
</p>
@if (Model.Count() <= 0)
{
    <div class="alert alert-danger">No data found</div>
}
else{
    <table id="mytable" class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PublishName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContactName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telephone)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PublishName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.PublishId">Edit</a> |
                    <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.PublishId">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.PublishId">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
}