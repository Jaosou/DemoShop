@model IEnumerable<DemoShop.ViewModels.BookCategoryPublisherViewModel>;
@{
	ViewData["Title"] = "รายการหนังสือ";
}
<h1>รายการหนังสือที่ค้นหา</h1>
@if (Model.Count() <= 0)
{
	<div class="alert alert-danger">No data found</div>
}
else
{
	@foreach (var item in Model)
	{
		<div class="card-header border border-dark">
			<h2>@item.BookName</h2>
			<span class="badge bg-danger">
				@item.CategoryName
			</span>
		</div>
		<div class="card-body">
			<p class="card-text">
				@item.PublishName
				@item.Isbn
				@item.BookCost
				@item.BookPrice
			</p>
		</div>
		<div class="card-footer text-muted">
			<a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.BookId">Edit</a> |
			<a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.BookId">Details</a> |
			<a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.BookId">Delete</a> |
			<a class="btn btn-outline-dark" asp-action="IndexViewModel">หน้าแรก</a>
		</div>
	}
}