@model IEnumerable<DemoShop.Models.db.Category>
@{
	ViewData["Title"] = "Edit Category";
}

<h1>
	Update
</h1>
@if (Model.Count() <= 0)
{
	<div class="alert alert-danger">
		No data found.
	</div>
}
else
{
	<table id="mytable">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Action</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
			@* Loop through each item in the model *@
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.CategoryId</td>
					<td>@item.CategoryName</td>
					<td>
						<a class="btn btn-warning"
						asp-controller ="Category"
						asp-action="ShowUpd"
						asp-route-id ="@item.CategoryId"
						onclick="return confirm('Do you want to update : @item.CategoryId ?')">
							Update

						</a>
					</td>
					<td>
						<a class="btn btn-danger"
						asp-controller ="Category"
						asp-action="deleteCategory"
						asp-route-id ="@item.CategoryId"
						onclick="return confirm('Do you want to delete : @item.CategoryId ?')">
							Delete

						</a>
					</td>
				</tr>
			}
	</table>
}
