@model IEnumerable<DemoShop.Models.db.Category>
@{
	ViewData["Title"] = "Categories Index";
}

<h1>List type of books</h1>

@if (Model.Count() <= 0 )
{
	<div>Not found data.</div>
}
else
{
	<table id="mytable">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			@* Loop through each item in the model *@
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.CategoryId</td>
					<td>@item.CategoryName</td>
					<td>
						<a asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
						<a asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
